<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@testStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.ChatboxController">
<VBox>

    <TextArea fx:id="chatTextArea" styleClass="chat-area" VBox.vgrow="ALWAYS" />

    <HBox>
        <TextField fx:id="messageTextField" styleClass="message-input" HBox.hgrow="ALWAYS" />
        <Button fx:id="sendButton" onAction="#handleSendButtonAction" text="Send" />
    </HBox>

</VBox>
</AnchorPane>
